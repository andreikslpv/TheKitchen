<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextTitle">
        <item name="android:textSize">@dimen/text_title</item>
        <item name="android:textColor">@color/text_card_title</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">start</item>
    </style>

    <style name="TextTitle.Center" parent="TextTitle">
        <item name="android:gravity">center</item>
    </style>


    <style name="TextTitleButtonFill">
        <item name="android:textSize">@dimen/text_title_button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TextTitleCategory">
        <item name="android:textSize">@dimen/text_title_category</item>
        <item name="android:textColor">@color/text_card_title</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TextTitleCategory.Start" parent="TextTitleCategory">
        <item name="android:gravity">start</item>
    </style>

    <style name="TextWarning">
        <item name="android:textSize">@dimen/text_warning</item>
        <item name="android:textColor">@color/purple</item>
        <item name="android:gravity">start</item>
    </style>

    <style name="TextToolbarMenu">
        <item name="android:textSize">@dimen/text_title_button</item>
        <item name="android:textColor">@color/purple</item>
        <item name="android:gravity">start</item>
    </style>

    <style name="TextUps">
        <item name="android:textSize">@dimen/text_title</item>
        <item name="android:textColor">@color/purple</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TextEmpty">
        <item name="android:textSize">@dimen/text_title_button</item>
        <item name="android:textColor">@color/text_menu_title</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TextCopyright">
        <item name="android:textSize">@dimen/text_warning</item>
        <item name="android:textColor">@color/text_menu_title</item>
        <item name="android:gravity">center</item>
    </style>

</resources>